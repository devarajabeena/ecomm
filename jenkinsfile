pipeline {
    agent any
    
    stages {
        stage('web servar') {
            steps {
	           
                sh 'sudo apt install nginx -y'    
            }
        }
        stage('Check Disk Space') {
            steps {
	           echo 'check disk details '
                sh 'df -h'    
            }
        }
        stage('os details') {
            steps {
	           echo 'check os details '
                sh 'cat /etc/os-release'    
            }
        }
     }
  }


