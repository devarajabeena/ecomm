 pipeline{
  agent any
  stages {
      stages {
        stage('notification') {
            steps {
                slackSend channel: 'project-1', color: '#439FE0', message: 'ecomm deployment job started', teamDomain: 'acmo-co-talk', tokenCredentialId: 'slack'
            }
        }
        stage('Email notification') {
            steps {
               emailext body: 'Testing Jenkins Pipeline Notification', subject: 'Testing Email Notification', to: 'devarajabeena111@gmail.com'
        }
    }
  
   stage ('web server') {
      steps {
        sh 'sudo apt install nginx -y'
      }
    }
    stage ('default page removel') {
      steps{
        sh 'sudo rm -rf /var/www/html/*'
      }
    }
    stage ('deploy') {
      parallel{
        stage ('Linux Deployment'){
          steps{
            sh 'sudo cp -rf /var/lib/jenkins/workspace/ecomm/* /var/www/html'
          }
        }
        stage ('Windows Deployment'){
          steps{
            echo 'wind deployment done'
          }
        }
     }
    }
    stage ('restart') {
      steps{
        sh 'sudo systemctl restart nginx'
      }
    }
    stage ('Testing') {
      parallel{
          stage('andraiod'){
            steps{
              echo "testing on andraiod Phone"
             }
          }
         stage('I Phone'){
            steps{
              echo "testing on Apple Phone"
             }
          }
          stage('Linux'){
            steps{
              echo "testing on Linux"
             }
          }
         stage('Windows'){
            steps{
              echo "testing on windows"
             }
          }
      }
    }
  }
}

  
           





